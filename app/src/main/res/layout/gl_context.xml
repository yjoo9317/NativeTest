<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- We will create a GLES context and render to this SurfaceView -->
    <com.sonos.youngjoopark.nativetest.MyGLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- TextBox where OpenGLES version is displayed -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GLES native"
        android:id="@+id/gl_version_textview"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"/>

</FrameLayout>